# ü¶æ TITAN-BASE: Debian Bookworm + Librer√≠as de IA
FROM node:20-bookworm AS builder

# Instalar dependencias de compilaci√≥n y librer√≠as nativas
RUN apt-get update && apt-get install -y \
    python3 \
    make \
    g++ \
    gcc \
    git \
    libgomp1 \
    libpng-dev \
    libjpeg-dev \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copiar archivos de dependencias
COPY backend/package*.json ./

# Instalar dependencias (incluyendo nativas para Linux)
RUN npm install --legacy-peer-deps

# --- ETAPA DE RUNTIME ---
FROM node:20-bookworm-slim AS runner
WORKDIR /app

# Instalar solo librer√≠as de ejecuci√≥n necesarias
RUN apt-get update && apt-get install -y \
    libgomp1 \
    wget \
    && rm -rf /var/lib/apt/lists/*

# Copiar node_modules compilados del builder
COPY --from=builder /app/node_modules ./node_modules
COPY backend/package*.json ./

# Copiar el bundle pre-compilado desde el host
COPY backend/dist/bundle.js ./dist/bundle.js

EXPOSE 3000
ENV NODE_ENV=production

# Comando de inicio
CMD ["node", "dist/bundle.js"]
