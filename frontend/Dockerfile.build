# Dockerfile for building the Next.js app for Cloudflare Pages
FROM node:20-slim

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install --legacy-peer-deps --ignore-scripts

# Copy project files
COPY . .

# Build the project
RUN npm run build

# Run next-on-pages
RUN npx @cloudflare/next-on-pages --outdir .vercel/output/static

# The output will be in /app/.vercel/output/static
CMD ["cp", "-r", ".vercel/output/static", "/output"]
